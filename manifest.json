{
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"version": "0.7.1",
	"manifest_version": 2,
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"activeTab",
		"https://www.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/*"
			],
			"js": [
				"content_script.js"
			],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": ["injected.js"]
}
